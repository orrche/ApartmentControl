<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="se.nedo.apartmentcontrol"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <!-- Broadcast Receiver that will process AppWidget updates -->
		<receiver android:name=".apartmentcontrol" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
				<action android:name="se.nedo.apartmentcontrol.android.widget.buttons.ButtonWidget.ACTION_WIDGET_RECEIVER"/>
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/apartmentcontrol_provider" />
		</receiver>

		<activity android:name=".ClickOneActivity">
			<intent-filter>
				<action android:name="se.nedo.apartmentcontrol.buttons.ButtonWidget.ACTION_WIDGET_CONFIGURE"/>
			</intent-filter>
		</activity>

    </application>


</manifest> 